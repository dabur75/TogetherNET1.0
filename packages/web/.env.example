# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=togethernet-israel-poc.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=togethernet-israel-poc
VITE_FIREBASE_STORAGE_BUCKET=togethernet-israel-poc.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
VITE_FIREBASE_APP_ID=your_firebase_app_id_here

# Environment
VITE_NODE_ENV=development
VITE_USE_FIREBASE_EMULATOR=true

# Emulator Configuration
VITE_EMULATOR_AUTH_URL=http://localhost:9099
VITE_EMULATOR_FIRESTORE_HOST=localhost

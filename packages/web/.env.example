VITE_EMULATOR_FUNCTIONS_HOST=localhost
VITE_EMULATOR_FUNCTIONS_PORT=5001
VITE_EMULATOR_STORAGE_HOST=localhost
VITE_EMULATOR_STORAGE_PORT=9199

# Application Configuration
VITE_APP_VERSION=1.0.0
VITE_APP_BUILD_DATE=2025-01-17
VITE_DEFAULT_LANGUAGE=he
VITE_SUPPORTED_LANGUAGES=he,en

# Therapeutic Configuration
VITE_BANKER_RESPONSE_DELAY=800
VITE_DAILY_EXERCISE_PUBLISH_TIME=06:00
VITE_GENTLE_REMINDER_TIMES=08:00,14:00,20:00
VITE_MAX_DEPOSIT_LENGTH=500
VITE_MIN_DEPOSIT_LENGTH=20

# Feature Flags
VITE_ENABLE_CREATIVE_STUDIO=false
VITE_ENABLE_LOVE_MARK_IT=false
VITE_ENABLE_EMERGEN_SEE=true
VITE_ENABLE_HEALING_ROW=false
VITE_ENABLE_ANALYTICS=true

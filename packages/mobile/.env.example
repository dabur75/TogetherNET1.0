# Firebase Configuration
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=togethernet-israel-poc.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=togethernet-israel-poc
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=togethernet-israel-poc.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
EXPO_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id_here

# Environment
NODE_ENV=development
EXPO_PUBLIC_USE_FIREBASE_EMULATOR=true

# Emulator Configuration (for development)
EXPO_PUBLIC_EMULATOR_AUTH_URL=http://localhost:9099
EXPO_PUBLIC_EMULATOR_FIRESTORE_HOST=localhost
EXPO_PUBLIC_EMULATOR_FIRESTORE_PORT=8080
EXPO_PUBLIC_EMULATOR_FUNCTIONS_HOST=localhost
EXPO_PUBLIC_EMULATOR_FUNCTIONS_PORT=5001

# Application Configuration
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_BUILD_DATE=2025-01-17
EXPO_PUBLIC_DEFAULT_LANGUAGE=he
EXPO_PUBLIC_SUPPORTED_LANGUAGES=he,en

# Therapeutic Configuration
EXPO_PUBLIC_BANKER_RESPONSE_DELAY=800
EXPO_PUBLIC_DAILY_EXERCISE_PUBLISH_TIME=06:00
EXPO_PUBLIC_GENTLE_REMINDER_TIMES=08:00,14:00,20:00
EXPO_PUBLIC_MAX_DEPOSIT_LENGTH=500
EXPO_PUBLIC_MIN_DEPOSIT_LENGTH=20

# Feature Flags
EXPO_PUBLIC_ENABLE_EMERGEN_SEE=true
EXPO_PUBLIC_ENABLE_HEALING_ROW=false
EXPO_PUBLIC_ENABLE_LOVE_MARK_IT=false
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true

# Development
EAS_BUILD_PROFILE=development
EXPO_PUBLIC_ENABLE_DEV_TOOLS=true